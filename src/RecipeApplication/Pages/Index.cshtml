@page
@model IndexModel
@{
    ViewData["Title"] = "Menus";
}

<div class="table-responsive">
    <table class="table table-striped recipe">
        <thead>
            <tr>
                <th>Recipe</th>
                <th>TimeToCook</th>
                <th>Number of ingredients</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model.Recipe)
            {
                <tr>
                    <td class="align-middle">@recipe.Name</td>
                    <td class="align-middle">@recipe.TimeToCook</td>
                    <td class="align-middle">@recipe.NumberOfIngredients</td>
                    <td class="align-middle"><a asp-page="Recipe/View" asp-route-id="@recipe.Id" class="btn btn-primary">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-page="Recipe/Create" class="btn btn-success">Create new Recipe</a>